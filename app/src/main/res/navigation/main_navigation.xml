<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@+id/video_fragment">

    <fragment
        android:id="@+id/video_fragment"
        android:name="com.ysp.camep.ui.video.VideoFragment"
        android:label="@string/title_video"
        tools:layout="@layout/video_fragment" >
        <action
            android:id="@+id/action_video_to_video_player"
            app:destination="@id/video_player_activity" />
    </fragment>
    <fragment
        android:id="@+id/home_fragment"
        android:name="com.ysp.camep.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_home_to_home_second"
            app:destination="@id/home_second_fragment" />
    </fragment>
    <fragment
        android:id="@+id/home_second_fragment"
        android:name="com.ysp.camep.ui.home.HomeSecondFragment"
        android:label="HomeSecondFragment" >
        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="com.ysp.camep.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment" />
    <fragment
        android:id="@+id/notifications_fragment"
        android:name="com.ysp.camep.ui.notifications.NotificationsFragment"
        android:label="NotificationsFragment" />
    <activity
        android:id="@+id/video_player_activity"
        android:name="com.ysp.camep.ui.videoplayer.VideoPlayerActivity"
        android:label="VideoPlayerActivity">
        <argument
            android:name="uris"
            app:argType="android.net.Uri[]" />
    </activity>

</navigation>